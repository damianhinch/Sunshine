<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context="com.damianhinch.sunshine.DetailView$PlaceholderFragment">

  <LinearLayout
    android:id="@+id/detail_view_linear_layout_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/detail_view_padding_between_layouts"
    android:orientation="vertical">

    <TextView
      android:id="@+id/detail_view_text_view_date_day"
      tools:text="Today"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/detail_view_date_day_text_size" />


    <TextView
      android:id="@+id/detail_view_text_view_date_date_full"
      tools:text="June 19"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/detail_view_date_date_text_size" />
  </LinearLayout>

  <RelativeLayout
    android:id="@+id/relative_layout_temperature_min_max_and_graphic"
    android:layout_below="@id/detail_view_linear_layout_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/detail_view_text_view_max_temp"
      android:layout_alignParentTop="true"
      tools:text="18°C"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/detail_view_temperature_max_text_size" />

    <TextView
      android:id="@+id/detail_view_text_view_min_temp"
      android:layout_below="@id/detail_view_text_view_max_temp"
      tools:text="12°C"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:textSize="@dimen/detail_view_temperature_min_text_size" />

    <ImageView
      android:id="@+id/detail_view_image_view_forcast_icon"
      android:layout_toRightOf="@id/detail_view_text_view_max_temp"
      android:layout_alignParentTop="true"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:paddingLeft="32dp"
      android:src="@android:drawable/ic_menu_edit" />
  </RelativeLayout>

  <LinearLayout
    android:id="@+id/detail_view_image_weather_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/detail_view_text_view_humidity"
      tools:text="Humidity: 81%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/detail_view_text_view_pressure"
      tools:text="Pressure 1017 hPa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/detail_view_text_view_min_wind"
      tools:text="Wind: 2km/h NW"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</RelativeLayout>
