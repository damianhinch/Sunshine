<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:minHeight="32dp"
  android:paddingBottom="8dp"
  android:paddingTop="8dp"
  android:layout_gravity="center_vertical"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/weather_list_view_item_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginRight="10dp"
    android:src="@drawable/ic_launcher"/>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
      android:id="@+id/weather_list_view_item_date"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      tools:text="Mondesday" />

    <TextView
      android:id="@+id/weather_list_view_item_weather_condition"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      tools:text="Fire-rain" />

  </LinearLayout>


  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:layout_weight="0">

    <TextView
      android:id="@+id/weather_list_view_item_max_temp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="end"
      tools:text="21 C" />

    <TextView
      android:id="@+id/weather_list_view_item_min_temp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="30 C" />

    </LinearLayout>


</LinearLayout>

